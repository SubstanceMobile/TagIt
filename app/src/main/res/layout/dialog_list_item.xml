<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/default_artwork_gem"
        android:layout_margin="16dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:paddingStart="104dp"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <TextView
            android:gravity="bottom"
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:singleLine="true"
            android:textSize="@dimen/text_size_default"
            android:textColor="@color/primary_text_color_light"/>

        <TextView
            android:id="@+id/item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-regular"
            android:singleLine="true"
            android:textSize="@dimen/text_size_subitle"
            android:textColor="@color/secondary_text_color_light"/>

    </LinearLayout>




</FrameLayout>